

<div class="content">
    <img src="img/banner/banner6(1).jpg"  style="width: 100%" alt="">
    <div class="contentPlateTop" style="height:80px">
        <div class="left" style="width: 18%;height: 50px;">
            <h1 style="font-size: 30px;display: inline-block;line-height: 40px" class="left">MY COURSE</h1>
        </div>
        <div style="width: 80%;height: 50px;" class="left">
            <p style="font-size: 16px;color: #3671ce;font-weight: 900">我的课程</p>
            <span style="color: #8c8c8c">更多课程尽在九君网</span>
        </div>
    </div>

    <div class="courseInfoSub box-shadow"
         style="margin-bottom: 30px"
         ng-repeat="item in m.courseList">
        <img  style="width: 300px;float: left;" ng-src="{{m.config.filesUrl}}/courses/{{item.courseName}}.jpg" alt="">
        <div class="courseContent">
            <h3 class="size16" >{{item.courseName}}</h3>
            <p class="titleStyle  nonMargin" style="width: 100%">{{item.summarySmall}}</p>
            <div style="padding: 5px 0 5px 0; ">
                <span style="display: none">{{Item.starRating = courseInfo.baseInfo.starRating.toFixed(1)}}</span>
            </div>

            <div class="courseInfoSubButton" style="width:100%;height:45px;">
                <button class="myBtnCourseItem btnLearnEasy" ng-click="learn(item,0)" ng-if="item.isOldLearn" ng-disabled="courseInfo">开始学习</button>
                <button class="myBtnCourseItem btnLearnEasy" style="background-color:#f56a6a;" ng-click="learn(item,1)" ng-if="item.isLearnEasy" ng-disabled="courseInfo"><span class="iconfont">&#xe60f;</span>简单学习</button>
                <button class="myBtnCourseItem btnLearnNormal" ng-click="learn(item,2)" ng-if="item.isLearnNormal" ng-disabled="courseInfo">开始学习</button>
                <button class="myBtnCourseItem btnLearnHard" style="background-color:#f56a6a;" ng-click="learn(item,3)" ng-if="item.isLearnHard" ng-disabled="courseInfo"><span class="iconfont">&#xe60e;</span>标准学习</button>
                <button class="marginRight pointer" style="background-color:#55b5ff;" ng-click="exam(item)"  ng-if="item.isExam">
                    <span class="iconfont">&#xe602;</span>
                    测试
                </button>
                <button class="pointer" style="background-color:#f4c900;" ng-click="unkeep(item.course_id)">
                    <span class="iconfont" style="margin: -4px;">&#xe708;</span>
                    取消收藏
                </button>
            </div>
        </div>
    </div>
    <div  class="courseInfoSub" ng-if="m.courseList.length==0&&judgeId()">
        <h1 style="font-size: 30px;margin: auto">
            没有课程哦，去收藏吧！
        </h1>
    </div>
</div>
