<ion-view>
    <ion-header-bar class="bar-positive">
        <i class="button icon ion-chevron-left font_min" style="border-style:none;padding-bottom: 10px;;" ng-click="toMessageList()"></i>
        <h1 class="title">信息</h1>
    </ion-header-bar>
    <ion-content>
        <ion-list>
            <ion-item style="border:none;">
                <h2 class="text-center">{{messageItem.title}}</h2>
                <p style="color:rgba(128,128,128,0.5);padding-top: 15px;">
                    <span class="pull-left padding-left">{{messageItem.subTitle}}</span>
                    <span class="pull-right padding-right">{{messageItem.sendTime|date:'yyyy-MM-dd'}}</span>
                </p>
                <div class="clearfix"></div>
            </ion-item>
            <ion-item style="border:none;padding-top: 0;">
                <img class="padding" ng-if="messageItem.pic" ng-src="http://{{messageItem.pic}}" style="width:100%;" />
                <!--<img ng-if="!messageItem.pic" src="imgs/news_big.jpg" style="width:100%" />-->
                <div ng-if="messageItem.contents">
                    <!--<div style="border:none; padding:10px 0px;" ng-repeat="item in messageItem.contents|msgContentFormat">
                        <span style="color:rgba(128,128,128,0.5)">{{item.key}}</span><span>{{item.value}}</span>
                    </div>-->
                    <div style="border:none; padding:10px 0px;" ng-repeat="item in messageItem.contents">
                    	<span style="color:rgba(128,128,128,0.5)">{{item|msgFormat:'title'}}:</span>
                        <span style="color:rgba(128,128,128,1);word-wrap:break-word;">{{item|msgFormat:'content'}}</span>
                    </div>
                </div>
                <div ng-if="!messageItem.contents">
                    <span style="border:none; display:block; padding:10px 0px;">{{messageItem.content}}</span>
                </div>
            </ion-item>
        </ion-list>
    </ion-content>
</ion-view>