<ion-view view-title="用户登录">
    <ion-header-bar class="bar-positive">
        <h1 class="title">
            账号登录
        </h1>
        
    </ion-header-bar>
    <ion-content>
        <div class="app-logo-div">
            <img src="imgs/icon.png"  class="app-logo"/>
            <img src="imgs/loginbg.png" class="app-logo1"/>
        </div>
        
        <div class="list padding-bottom" >
            <div class="item item-input">
                <i class="iconfont icon-icouser padding"></i>
                <input type="text" ng-model="model.account" placeholder="账号">
            </div>
            <div class="item item-input">
                <i class="iconfont icon-icon23 padding"></i>
                <input type="password" ng-model="model.password" placeholder="密码">
            </div>
        </div>
        <div class="padding" >
            <div class="row">
                <div class="col">
                    <button class="button button-block button-positive" ng-click="login()">
                        登录
                    </button>
                </div>
            </div>
            <a class="button button-clear button-positive" href="#/findPassword">
                忘记密码?
            </a>
            <a class="button button-clear button-positive pull-right" href="#/userRegist">
                新用户
            </a>
        </div>
    </ion-content>
</ion-view>
