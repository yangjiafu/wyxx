<ion-view view-title="信息列表">
    <ion-header-bar class="bar-positive">
        <h1 class="title">信息列表</h1>
    </ion-header-bar>
    <ion-content>
        <ion-list ng-repeat="item in m.classifyList" id="newsList">
            <ion-item ng-click="toList(item.id)">
                <i class="iconfont {{item.css}} thumbnail" style="float:left;"></i>
                <div style="float:left">
                    <h2>{{item.title}}<small class="app-total-bage">20</small></h2>
                    <span style="font-size:12px;color:#999;">{{item.subTitle}}</span>
                </div>
                <i class="ion-ios-arrow-right pull-right" style="font-size:20px;margin-top:10px;color:#999;"></i>
                <div class="clearfix"></div>
            </ion-item>
        </ion-list>
    </ion-content>
</ion-view>


